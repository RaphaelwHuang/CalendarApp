<p id="notice"><%= notice %></p>

<h1>List of Event</h1>
<h2><%= find_day %></h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Start day</th>
      <th>End day</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.start_time.hour.to_s + ":" + event.start_time.min.to_s %></td>
        <td><%= event.end_time.hour.to_s + ":" + event.end_time.min.to_s %></td>
        <td><%= event.start_day %></td>
        <td><%= event.end_day %></td>

        <td>
          <%= link_to 'Show', event %>
          <%= link_to 'Edit', edit_event_path(event) %>
          <%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path %>
