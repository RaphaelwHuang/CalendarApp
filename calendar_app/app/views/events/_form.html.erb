<%#
Changes:
  JA- added maxLength to event name
      changed selection time for start/end day
  SP- Time select now in 15 minute intervals
%>
<%= bootstrap_form_for(event) do |f| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.text_field :name, label:"Event Name", :maxlength => 23%>
  </div>

  <div class="field">
  <%= f.label :starting_time %><br>
  <%= f.datetime_select :starting_time %>
</div>

<div class="field">
  <%= f.label :ending_time %><br>
  <%= f.datetime_select :ending_time %>
</div>


  <div class="actions">
    <%= f.submit label: "Create Event", class: "btn btn-success"%>
  </div>
  <small><em>* All fields are required</em></small>
<% end %>
