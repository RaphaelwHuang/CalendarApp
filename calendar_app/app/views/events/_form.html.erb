<!-- Modified:
          JA: added maxLength to event name
                changed selection time for start/end day
-->
<%= form_for(event) do |f| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, :maxlength => 23%>
  </div>
  <div class="field">
    <%= f.label :start_time %><br>
    <%= f.time_select :start_time %>
  </div>
  <div class="field">
    <%= f.label :end_time %><br>
    <%= f.time_select :end_time %>
  </div>
  <div class="field">
    <%= f.label :start_day %><br>
    <% days = ['Mon', 'Tue', 'Wen', 'Thu', 'Fri', 'Sat', 'Sun'] %>

      <%= f.select :start_day, ['Mon', 'Tue', 'Wen', 'Thu', 'Fri', 'Sat', 'Sun']%>

  </div>
  <div class="field">
    <%= f.label :end_day %><br>
    <%= f.select :end_day, ['Mon', 'Tue', 'Wen', 'Thu', 'Fri', 'Sat', 'Sun']%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
