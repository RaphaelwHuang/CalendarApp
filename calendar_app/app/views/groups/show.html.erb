<p>
  <strong>Group Name:</strong>
  <%= @group.name %>
</p>

<p>
  <strong>Group Creator:</strong>
  <%creator = @group.admins[0] %>
  <%= creator.fname + ' ' + creator.lname %>
</p>

<p>
  <strong>Group ID:</strong>
  <%= @group.id %>
</p>

<p>
  <strong>Number of Users:</strong>
  <%= @group.users.count %>
  <table class = "table table-striped">
  <thead class="thead-inverse">
  		<th>First Name</th>
  		<th>Last Name</th>
  		<th>Email</th>
  		<th>Admin</th>
  		<% if @group.admins.include? current_user %>
  		<th colspan="3">Options</th>
  		<% end %>
  </thead>
  <tbody>
  		<% @group.users.each do |user| %>
  			<tr>
  				<td><%= user.fname %></td>
  				<td><%= user.lname %></td>
  				<td><%= user.email %></td>
  				<td><%= @group.admins.include? user %></td>
  				<% if @group.admins.include? current_user %>
  				<td><button><%= link_to 'Promote', '' %></button></td>
  				<td><button><%= link_to 'Demote', '' %></button></td>
  				<td><button><%= link_to 'Remove', '' %></button></td>
  				<% end %>
  			</tr>
  		<% end %>
  </tbody>
  </table>
</p>

<button><%= link_to 'Edit', edit_group_path(@group) %></button>
<% if @group.admins.include? current_user %>
<button><%= link_to 'Delete Group', group_path(@group), method: :delete, data: {confirm: 'Are you sure you want to delete this group? This cannot be undone'} %></button>
<% end %>
<button><%= link_to 'Groups Home', groups_path %></button>
