
<h1><%= current_user.fname %>'s Groups</h1>

<table class = "table table-striped">
  <thead class="thead-inverse">
    <tr>
      <th>#</th>
      <th>Name(link to calendar on name?)</th>
      <th>Number of Users</th>
      <th colspan="3">Group options</th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <% group.users.each do |user| %>
        <% if user.email == current_user.email%>
            <tr>
              <td><%= group.id %></td>
              <td><%= group.name %></td>
              <td><%= group.users.distinct.count %></td>
              <td><button><%= link_to "Show", group %></button></td>
            </tr>
    
      <% end %> <!--END OF IF-->
    <% end %> <!-- END OF GROUP -->
    <% end %>
  </tbody>
</table>

<br>
<button><%= link_to 'Create New Group', new_group_path %></button>
