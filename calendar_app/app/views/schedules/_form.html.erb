        <div class="field">
          <%= f.label :end_day %><br>
          <%= f.select :end_day, ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday']%>
        </div>
        <div class="actions">
          <%= f.submit %>
        </div>
    <% end %>
